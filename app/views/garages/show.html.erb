<div class="px-5 mt-5 pb-3">
  <p style="margin: 0;"><%= pluralize(@cars.length, 'car') %></p>
  <h1>My Garage</h1>
  <div class="mt-2 mb-4">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Manufacturer</th>
          <th scope="col">Model</th>
          <th scope="col">Color</th>
          <th scope="col">Year</th>
          <th scope="col">Number plate</th>
          <th scope="col">Price/day</th>
          <th scope="col">Favorites</th>
          <th scope="col">Bookings</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @cars.each_with_index do |car, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= car.manufacturer.name %></td>
            <td><%= car.model.name %></td>
            <td><%= car.color %></td>
            <td><%= car.year %></td>
            <td><%= car.number_plate %></td>
            <td>â‚¬99</td>
            <td><%= car.favorited_count %></td>
            <td><%= car.number_of_bookings %></td>
            <td>
              <%= link_to 'View', car_path(car) %> |
              <%= link_to 'Edit', edit_car_path(car) %> |
              <%= link_to 'Transfer', "#" %> |
              <%= link_to 'Remove', car_path(car), method: :delete %>
            </th>
          </tr>

        <% end %>
      </tbody>
    </table>
  </div>
  <div class="my-5">
    <%#= paginate @cars, window: 2, left: 1, right: 1 %>
  </div>
</div>