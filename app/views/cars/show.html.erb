<div class="splash">
  <%= cl_image_tag @car.photo.key,
                   width: 1440, height: 367,
                   crop: 'fill_pad', gravity: 'auto',
                   background: 'black'
  %>
</div>

<div class="container my-4">
  <div class="row">
    <div class="col-12 col-lg-8">
      <div class="d-flex flex-row justify-content-between align-items-center">
        <div>
          <h1><%= @car.name %></h1>
          <div class="my-2 d-flex flex-row">
            <%= @car.year %> &middot; <%= @car.color%>
            <% if @car.hex_code.present? %>
              <div
                class="dot ml-3"
                style="background: <%= @car.hex_code%>"></div>
            <% end %>
          </div>
        </div>
        <div class="d-flex flex-column justify-content-center align-items-center">
          <% if @car.owner.avatar.attached? %>
            <%= cl_image_tag @car.owner.avatar.key, 
                            class: 'avatar-bordered',
                            width: 40, height: 40,
                            crop: :thumb, gravity: :face
            %>
          <% else %>
            <%= image_tag "default.jpg",
                          class: 'avatar-bordered'
            %>
          <% end %>
          <p><strong><%= @car.owner.name.full %></strong></p>
        </div>
      </div>
      <p><%= @car.description %></p>
    </div>

    <div class="col-12 col-lg-4 background-primary">
      <%= render 'bookings/form' %>
    </div>
  </div>
</div>