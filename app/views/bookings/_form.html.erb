<div class="booking border p-4">
  <%= simple_form_for([@car, @booking]) do |f| %>
    <h3><span class="price">€<%= number_with_delimiter(@car.price_per_day) %></span> per day</h3>
    <hr>
    <div class="form-row">
      <%= f.input :start_date,
                  as: :string,
                  label: 'Dates',
                  placeholder: 'From',
                  input_html: {
                    value: f.object.start_date || Time.zone.now,
                    data: {
                      controller: 'datepicker',
                      datepicker_show_months: 1,
                      datepicker_min_date: Time.zone.today
                    }
                  }
      %>
      <%= f.input :end_date,
                  as: :string,
                  label: false,
                  placeholder: 'To',
                  disabled: false,
                  input_html: {
                    value: f.object.end_date,
                    data: {
                      controller: 'datepicker',
                      datepicker_show_months: 1,
                      datepicker_min_date: Time.zone.today
                    }
                  }
      %>
    </div>
    <div class="costs">
      <table class="table">
        <tr>
          <td>€<%= number_with_delimiter(@car.price_per_day) %> x <span>0</span> days</td>
          <td class="text-right">€<span>0</span></td>
        </tr>
        <tr>
          <td>Service fee</td>
          <td class="text-right">€<span>0</span></td>
        </tr>
        <tr>
          <td><strong>Total</strong></td>
          <td class="text-right">€<span>0</span></td>
        </tr>
      </table>
    </div>
    <%= f.button :submit, 'Reserve', class: 'btn btn-primary btn-lg btn-block' %>
  <% end %>
</div>