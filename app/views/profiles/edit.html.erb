<div class="container">
  <div class="card px-5 pt-5 pb-3 rounded">
    <h1>Edit Profile</h1>
    <div class="my-5">
      <%= simple_form_for @user, url: profile_path do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :avatar, as: :file %>
        <%= f.button :submit, 'Save', class: 'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>